@model Easycase.Model.Case.BLOtherDetail
<table id="spouseEducationHistory">
    <thead>
        <tr><th>Type</th><th>Job Title	</th><th>Job Duties	</th><th>Company/Employer</th><th>Duration (yrs)	</th><th>Hours/Week</th><th>Country</th></tr>
    </thead>
    <tbody>
        @if (Model.SpouseEmployementHistoryModal != null)
        {
            for (int i = 0; i < Model.SpouseEmployementHistoryModal.Type.Count(); i++)
            {
                <tr>
                    <td>
                        <select class="form-control data-type" id="education@(i)">
                            <option>Select</option>
                            <option value="Current">Current</option>
                            <option value="Previous">Previous</option>
                            <option value="No Work Experience">No Work Experience</option>
                        </select>
                    </td>
                    <td><input type="text" value="@(Model.SpouseEmployementHistoryModal.JobTitle[i])" class="form-control data-jobtitle" /></td>
                    <td><input type="text" value="@(Model.SpouseEmployementHistoryModal.JobDuties[i])" class="form-control data-duties" /></td>
                    <td><input type="text" value="@(Model.SpouseEmployementHistoryModal.CompanyEmployer[i])" class="form-control data-employeer" /></td>
                    <td>
                        <select class="form-control data-duration" id="duration@(i)">
                            <option value="">Select</option>
                            <option value="Less than 12 months">Less than 12 months</option>
                            <option value="1">1</option>
                            <option value="2">2</option>
                            <option value="3">3</option>
                            <option value="4">4</option>
                            <option value="5">5</option>
                            <option value="6">6</option>
                            <option value="7">7</option>
                            <option value="8">8</option>
                            <option value="9">9</option>
                            <option value="10+">10+</option>
                        </select>
                    </td>
                    <td><input type="number" value="@(Model.SpouseEmployementHistoryModal.HourWeek[i])" class="form-control data-hoursweek" /></td>
                    <td><input type="text" value="@(Model.SpouseEmployementHistoryModal.Country[i])" class="form-control data-country" /></td>
                    <td class="remove-control" style="width:20px">
                        @if (i == 0)
                        {
                            <i class="fa fa-minus-circle" aria-hidden="true"></i>
                        }
                        else
                        {
                            <i class="fa fa-minus-circle" style="color:red" onclick="RemoveRow(this)" aria-hidden="true"></i>
                        }
                    </td>
                </tr>
                <script>
                    $("#spouseEducationHistory").find("#education@(i)").val('@(Model.SpouseEmployementHistoryModal.Type[i])');
                    $("#spouseEducationHistory").find("#duration@(i)").val('@(Model.SpouseEmployementHistoryModal.Duration[i])');
                </script>
            }
        }
        else
        {
            <tr>
                <td>
                    <select class="form-control data-type" id="education0">
                        <option>Select</option>
                        <option value="Current">Current</option>
                        <option value="Previous">Previous</option>
                        <option value="No Work Experience">No Work Experience</option>
                    </select>
                </td>
                <td><input type="text" value="" class="form-control data-jobtitle" /></td>
                <td><input type="text" value="" class="form-control data-duties" /></td>
                <td><input type="text" value="" class="form-control data-employeer" /></td>
                <td>
                    <select class="form-control data-duration" id="duration0">
                        <option value="">Select</option>
                        <option value="Less than 12 months">Less than 12 months</option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                        <option value="6">6</option>
                        <option value="7">7</option>
                        <option value="8">8</option>
                        <option value="9">9</option>
                        <option value="10+">10+</option>
                    </select>
                </td>
                <td><input type="number" value="" class="form-control data-hoursweek" /></td>
                <td><input type="text" value="" class="form-control data-country" /></td>
                <td class="remove-control" style="width:20px">
                    <i class="fa fa-minus-circle" aria-hidden="true"></i>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="7">
                <span onclick="AddRowEducation('#spouseEducationHistory')" style="float:right; color:#0088cc;text-decoration:none; cursor:pointer"><i class="fa fa-plus-square" style="font-size:1.3em;"></i> Add another row for more information</span>
            </td>
        </tr>
    </tfoot>
</table>

